<%= vue_component 'LoginForm', {
  form_url: session_path(resource_name),
  errors: resource.errors.full_messages,
  csrf_token: form_authenticity_token,
  links: {
    register: new_registration_path(resource_name),
    forgot: new_password_path(resource_name)
  }
} do %>
  <template data-slot="rails-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: "display: none;", id: "rails-login-form" }) do |f| %>
      <%= f.email_field :email, id: "rails-login-email" %>
      <%= f.password_field :password, id: "rails-login-password" %>
      <%= f.submit "Se connecter", id: "rails-login-submit" %>
      <%= f.check_box :remember_me, id: "rails-login-remember", class: "hidden" %>
    <% end %>
  </template>
<% end %>