<div class="min-h-screen bg-gradient-to-br from-violet-100 via-blue-50 to-purple-100 dark:from-gray-900 dark:via-gray-800 dark:to-purple-900 flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <div class="bg-white/30 dark:bg-gray-800/30 backdrop-blur-xl rounded-2xl shadow-2xl p-8 border border-violet-200/50 dark:border-gray-700/50">
      <h2 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-8">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-200 leading-tight focus:outline-none focus:shadow-outline bg-white/50 dark:bg-gray-700/50 border-violet-200 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500 dark:text-gray-400">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-200 leading-tight focus:outline-none focus:shadow-outline bg-white/50 dark:bg-gray-700/50 border-violet-200 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-gray-700 dark:text-gray-300 text-sm font-bold mb-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 dark:text-gray-200 mb-3 leading-tight focus:outline-none focus:shadow-outline bg-white/50 dark:bg-gray-700/50 border-violet-200 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline transition-transform transform hover:scale-105 cursor-pointer" %>
        </div>
      <% end %>

      <div class="text-center mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
