<%= vue_component 'RegistrationForm', {
  form_url: registration_path(resource_name),
  minimum_password_length: @minimum_password_length,
  errors: resource.errors.full_messages,
  csrf_token: form_authenticity_token,
  links: {
    login: new_session_path(resource_name)
  }
} do %>
  <template data-slot="rails-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: "display: none;", id: "rails-registration-form" }) do |f| %>
      <%= f.email_field :email, id: "rails-reg-email" %>
      <%= f.password_field :password, id: "rails-reg-password" %>
      <%= f.password_field :password_confirmation, id: "rails-reg-password-confirmation" %>
      <%= f.submit "S'inscrire", id: "rails-reg-submit" %>
    <% end %>
  </template>
<% end %>